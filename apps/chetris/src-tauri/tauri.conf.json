{
  "productName": "CHATRIS",
  "identifier": "com.chatris.widget",
  "version": "4.2.0",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npx serve . -l 1420 --no-clipboard",
    "beforeBuildCommand": "node scripts/copy-dist.js"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "CHATRIS",
        "width": 174,
        "height": 288,
        "decorations": false,
        "transparent": false,
        "backgroundColor": "#0a0a1a",
        "alwaysOnTop": true,
        "resizable": true,
        "skipTaskbar": true
      },
      {
        "label": "settings",
        "title": "CHATRIS Settings",
        "url": "index.html#settings",
        "width": 300,
        "height": 520,
        "decorations": false,
        "transparent": false,
        "backgroundColor": "#0d0d1a",
        "alwaysOnTop": true,
        "resizable": false,
        "skipTaskbar": true,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' https://github.com https://api.github.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "compression": "lzma"
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/tellang/digital-fidget-spinner/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVFQjVDMTM1M0UwQzE2NzAKUldSd0ZndytOY0cxWGd6RjcvMGdwd2prWlM1Qms2Y0NPSnFLWGEwc0lPUFBBUkpqaW8rYXQxb04K"
    }
  }
}
